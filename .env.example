# Telegram Bot Token (from @BotFather)
CT_TELEGRAM_BOT_TOKEN=your-bot-token-here

# Comma-separated Telegram user IDs allowed to use the bot
CT_ALLOWED_USERS=123456789

# Comma-separated project directories
CT_PROJECT_DIRS=/home/user/project1,/home/user/project2

# Claude permission mode: default | acceptEdits | bypassPermissions
CT_PERMISSION_MODE=acceptEdits

# Allowed tools (comma-separated, empty = all)
CT_ALLOWED_TOOLS=

# Claude model (empty = default)
CT_MODEL=

# Max turns per query (0 = unlimited)
CT_MAX_TURNS=0

# SQLite database path (empty = ~/.claude-telegram/store.db)
CT_DB_PATH=

# Log level: DEBUG | INFO | WARNING | ERROR
CT_LOG_LEVEL=INFO
